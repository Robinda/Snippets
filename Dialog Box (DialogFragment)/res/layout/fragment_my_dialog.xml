<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/frame_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_dialog_title_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_menu_share"
            android:layout_marginStart="16dp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tv_dialog_title_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:textColor="#ff2d2d2d"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame_dialog_message"
        android:layout_below="@+id/frame_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tv_dialog_message_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ff2d2d2d"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

    <View
        android:id="@+id/h_separator"
        android:layout_below="@id/frame_dialog_message"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe0e0e0" />

    <LinearLayout
        android:id="@+id/frame_buttons"
        android:layout_below="@id/h_separator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_button_negative_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#ffc34826"
            android:textStyle="bold" />

        <View
            android:id="@+id/v_separator"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#ffe0e0e0" />

        <TextView
            android:id="@+id/tv_button_positive_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal|center_vertical"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#ffc34826"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>